</update>

<update id="start_work">
	UPDATE work
	   SET start_work = #{start_work}
	 WHERE employee_id= '20221001'
</update>


<!-- 로그인한 아이디의 출근정보만 출력 -->

<select  id="empInfo" resultType="emp.EmpVO">
select e.*, c.code_name position_name
from  employees e left join common_code c
on e.position = c.code_value 
where e.employee_id = '20221001'

</select>

